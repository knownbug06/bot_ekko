{
    "ui_expression_config": {
        "adapter_module_path": "bot_ekko.ui_expressions_lib.eyes",
        "adapter_class_name": "MainAdapter"
    },
    "services": {
        "sensor_service": {
            "name": "sensor_service",
            "enabled": false,
            "port": "/dev/ttyUSB0",
            "baud": 115200,
            "sensor_triggers": {
                "TOF": {
                    "proximity": 200
                }
            },
            "proximity_duration": 1,
            "sensor_update_rate": 0.1
        },
        "bt_service": {
            "name": "bt_service",
            "enabled": true
        },
        "gesture_service": {
            "name": "gesture_service",
            "enabled": false,
            "socket_path": "/tmp/ekko_ipc.sock",
            "gesture_update_rate": 0.1,
            "gesture_state_mapping": {
                "thumb_up": "HAPPY",
                "thumb_down": "ANGRY",
                "closed_fist": "ACTIVE",
                "victory": "UWU"
            }
        },
        "system_logs_service": {
            "name": "system_logs",
            "enabled": true,
            "sample_rate": 10.0
        }
    },
    "schedules": [
        {
            "name": "Sleep Schedule",
            "type": "daily",
            "start_time": "24:00",
            "end_time": "07:00",
            "state": "SLEEPING",
            "priority": 1,
            "interruptible_states": [
                "ACTIVE"
            ]
        },
        {
            "name": "happy_birthday_text",
            "type": "date",
            "start_datetime": "2026-04-06 10:00:00",
            "end_datetime": "2026-04-06 10:05:00",
            "state": "CANVAS",
            "priority": 10,
            "params": {
                "show": "text",
                "value": "Happy Birthday!",
                "duration": 300
            }
        },
        {
            "name": "happy_birthday_gif",
            "type": "date",
            "start_datetime": "2026-04-06 10:05:00",
            "end_datetime": "2026-04-06 10:10:00",
            "state": "CANVAS",
            "priority": 10,
            "params": {
                "show": "gif",
                "value": "birthday.gif",
                "duration": 300
            }
        },
        {
            "name": "Hourly Clock",
            "type": "hourly",
            "state": "CLOCK",
            "priority": 5,
            "params": {
                "duration": 10
            }
        }
    ]
}